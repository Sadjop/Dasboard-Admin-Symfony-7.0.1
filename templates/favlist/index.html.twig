{% extends 'base.html.twig' %}

{% block title %}Favlist index{% endblock %}

{% block body %}
    <h1>Favlist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ListName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for favlist in favlists %}
            <tr>
                <td>{{ favlist.id }}</td>
                <td>{{ favlist.listName }}</td>
                <td>
                    <a href="{{ path('app_favlist_show', {'id': favlist.id}) }}">show</a>
                    <a href="{{ path('app_favlist_edit', {'id': favlist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_favlist_new') }}">Create new</a>
{% endblock %}
