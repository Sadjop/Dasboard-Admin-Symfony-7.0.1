{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}
{% block title_breadcrumb %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Product_title</th>
                <td>{{ product.productTitle }}</td>
            </tr>
            <tr>
                <th>Product_description</th>
                <td>{{ product.productDescription }}</td>
            </tr>
            <tr>
                <th>Thumbnail_product</th>
                <td>{{ product.thumbnailProduct }}</td>
            </tr>
            <tr>
                <th>Product_create</th>
                <td>{{ product.productCreate ? product.productCreate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Average_note</th>
                <td>{{ product.averageNote }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
